<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    tools:viewBindingIgnore="false"
    android:id="@+id/main_activity_layout">


    <!-- FrameLayout for fragments -->


    <!-- BottomView -->
    <FrameLayout
        android:id="@+id/activity_main_framelayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/activity_main_bottomview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/activity_main_bottomview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_navigation_menu"/>

    <!-- Foating action buttons -->

    <!-- ADD -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_main_bottomview"
        android:layout_marginVertical="16sp"
        android:layout_marginHorizontal="16sp"
        android:src="@drawable/ic_baseline_add_24"
        android:backgroundTint="@color/colorPrimaryDark"
        tools:ignore="ContentDescription"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"/>



    <!-- ADD AGENT -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_agent_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/floating_action_button"
        app:layout_constraintEnd_toEndOf="@id/floating_action_button"
        app:layout_constraintBottom_toTopOf="@id/floating_action_button"
        android:layout_marginVertical="@android:dimen/app_icon_size"
        app:fabSize="mini"
        android:src="@drawable/add_agent"
        android:backgroundTint="@color/colorPrimaryDark"
        tools:ignore="ContentDescription"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/add_agent_texte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/add_agent_fab"
        app:layout_constraintTop_toTopOf="@id/add_agent_fab"
        app:layout_constraintEnd_toStartOf="@id/add_agent_fab"
        android:text="@string/add_agent"
        android:layout_marginEnd="16dp"
        android:textColor="@color/light_grey"
        android:visibility="invisible"/>


    <!-- ADD PROPERTY-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_property_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/add_agent_fab"
        app:layout_constraintEnd_toEndOf="@id/add_agent_fab"
        app:layout_constraintBottom_toTopOf="@id/add_agent_fab"
        android:layout_marginVertical="@android:dimen/app_icon_size"
        app:fabSize="mini"
        android:src="@drawable/add_property"
        android:backgroundTint="@color/colorPrimaryDark"
        tools:ignore="ContentDescription"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/add_property_texte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/add_property_fab"
        app:layout_constraintTop_toTopOf="@id/add_property_fab"
        app:layout_constraintEnd_toStartOf="@id/add_property_fab"
        android:text="@string/add_property"
        android:layout_marginEnd="16dp"
        android:textColor="@color/light_grey"
        android:visibility="invisible"/>






</androidx.constraintlayout.widget.ConstraintLayout>